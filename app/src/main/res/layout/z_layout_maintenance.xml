<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offline_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_120dp"
            android:layout_height="@dimen/dp_120dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_maintenance"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dp_20dp"
            android:layout_marginTop="@dimen/dp_20dp"
            android:layout_marginEnd="@dimen/dp_20dp"
            android:gravity="center"
            android:text="@string/maintenance_msg"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text_size_18sp" />

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40dp"
            android:background="@drawable/bg_button"
            android:paddingStart="@dimen/dp_10dp"
            android:paddingEnd="@dimen/dp_10dp"
            android:text="@string/try_again"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size" />


    </LinearLayout>

</RelativeLayout>